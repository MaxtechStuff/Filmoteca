<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertaPeliculas">

    <ImageView
        android:id="@+id/imagen_inserta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/label_nombre_inserta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:text="Nombre de la pelicula: "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen_inserta" />

    <EditText
        android:id="@+id/txt_nombre_inserta"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_nombre_inserta" />

    <TextView
        android:id="@+id/label_publicacion_inserta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="25dp"
        android:text="Fecha de estreno de la pelicula: "
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombre_inserta" />

    <EditText
        android:id="@+id/txt_publicacion_inserta"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_publicacion_inserta" />

    <Button
        android:id="@+id/btn_añadir_insertar"
        android:layout_width="187dp"
        android:layout_height="47dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="30dp"
        android:text="AÑADIR"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_publicacion_inserta" />

</androidx.constraintlayout.widget.ConstraintLayout>